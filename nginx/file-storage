server {
    listen 80;
    server_name 92.118.10.144;

    # Редирект с корня на /file-storage
    location = / {
        return 302 /file-storage;
    }

    # Отдача фронта из /file-storage
    location /file-storage/ {
        root /var/www/file-storage/frontend;
        try_files $uri $uri/ /file-storage/index.html;
    }

    # Прокси API
    location /api/ {
        proxy_pass http://localhost:3001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_cookie_path / "/; HttpOnly; SameSite=Lax";
    }
}
